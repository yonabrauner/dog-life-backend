// Each dog belongs to an owner (User)
model Dog {
  id         Int           @id @default(autoincrement())
  name       String        @unique
  picture    String?       
  activities DogActivity[]
}

// Each walk has 1 walker (User) and multiple dogs (via DogActivity)
// add later when implementing user: walker     User          @relation(fields: [walkerId], references: [id])// and change walkerName to walkerId
model Walk {
  id         Int           @id @default(autoincrement())
  date       DateTime
  duration   Int           // in minutes
  walkerName String
  dogActivities DogActivity[] // dogs that joined (pee/poop data)
  notes      String?
}

// DogActivity links a Dog to a Walk (pee/poop tracking)
model DogActivity {
  id      Int     @id @default(autoincrement())
  walkId  Int
  //dogName String
  dogId Int
  pee     Boolean @default(false)
  poop    Boolean @default(false)

  walk    Walk    @relation(fields: [walkId], references: [id])
  dog    Dog     @relation(fields: [dogId], references: [id])
}